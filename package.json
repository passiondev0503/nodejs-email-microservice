{
  "name": "@thegameofcode/hermes",
  "version": "0.1.0",
  "description": "notifications service",
  "main": "index.js",
  "scripts": {
    "test": "npm run features",
    "test-ci": "npm run jshint-ci && npm run coverage-ci",
    "api": "node_modules/.bin/file-composer -i doc/api.md -o apiary.apib",
    "api-git": "git add apiary.apib",
    "jshint": "node_modules/.bin/jshint ./lib ./features",
    "jshint-ci": "node_modules/.bin/jshint ./lib ./features",
    "features": "node_modules/.bin/cucumber.js -f pretty --tags ~@ignore",
    "coverage": "node_modules/.bin/istanbul cover ./node_modules/.bin/cucumber.js -- -f pretty --tags ~@ignore",
    "coverage-ci": "node_modules/.bin/istanbul cover ./node_modules/.bin/cucumber.js -- --tags ~@ignore --format json > $CIRCLE_TEST_REPORTS/tests.cucumber",
    "coverage-check": "node_modules/.bin/istanbul check-coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://us-gitlab.intelygenz.com/open-source/notifications.git"
  },
  "keywords": [
    "push",
    "email",
    "sms"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chai": "^3.0.0",
    "lodash": "^3.9.3",
    "request": "^2.58.0",
    "restify": "^3.0.3"
  },
  "devDependencies": {
    "cucumber": "^0.5.1",
    "file-composer": "git://github.com/thegameofcode/file-composer#master",
    "istanbul": "^0.3.15",
    "jshint": "^2.8.0",
    "pre-commit": "^1.0.10"
  },
  "pre-commit": [
    "api",
    "api-git",
    "jshint",
    "features"
  ],
  "jshintConfig": {
    "esnext": true,
    "node": true,
    "unused": true
  }
}
